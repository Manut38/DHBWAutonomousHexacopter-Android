<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MissionPlannerActivity" parent="@style/Theme.DHBWHexacopter">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="snackbarStyle">@style/SnackbarWithMargin</item>
        <item name="snackbarTextViewStyle">@style/SnackbarTextViewStyle</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">?attr/colorPrimaryDark</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item>
    </style>

    <style name="ThemeOverlay.DHBWHexacopter.BottomSheetDialog.Light" parent="ThemeOverlay.DHBWHexacopter.BottomSheetDialog.Base">
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="ThemeOverlay.DHBWHexacopter.BottomSheetDialog.Dark" parent="ThemeOverlay.DHBWHexacopter.BottomSheetDialog.Base">
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
    </style>

    <style name="ThemeOverlay.DHBWHexacopter.BottomSheetDialog.Base" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:targetApi="o_mr1">
            @android:color/transparent
        </item>
        <item name="bottomSheetStyle">@style/DHBWHexacopter.BottomSheet.Modal</item>
        <item name="android:backgroundDimAmount">0.2</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="DHBWHexacopter.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="behavior_peekHeight">1000dp</item>
    </style>

    <style name="Widget.DHBWHexacopter.TextInputLayout.FilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/filled_stroke_color</item>
        <item name="hintTextColor">?attr/colorSecondary</item>
    </style>

    <style name="NavStatusCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SnackbarWithMargin" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">@null</item>
        <item name="android:layout_marginTop">@dimen/mtrl_snackbar_margin</item>
        <item name="android:layout_marginStart">@dimen/mtrl_snackbar_margin</item>
        <item name="android:layout_marginEnd">@dimen/mtrl_snackbar_margin</item>
        <item name="android:layout_marginBottom">268dp</item>
        <item name="animationMode">fade</item>
    </style>

    <style name="SnackbarTextViewStyle" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
</resources>