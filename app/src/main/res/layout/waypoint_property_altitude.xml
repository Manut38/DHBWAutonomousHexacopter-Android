<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/waypoint_dialog_altitude"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/waypoint_altitude"
        app:layout_constraintBottom_toBottomOf="@+id/waypoint_altitude"
        />

    <EditText
        android:id="@+id/waypoint_altitude"
        android:layout_width="@dimen/waypoint_properties_edit_text_width"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:inputType="numberDecimal"
        android:maxLength="2" />
</androidx.constraintlayout.widget.ConstraintLayout>